# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=your-account-id-here

# Project Configuration
PROJECT_NAME=aws-ai-cost-optimizer
ENVIRONMENT=production

# Notification Settings
NOTIFICATION_EMAIL=your-email@example.com
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# AI Provider Configuration (Choose ONE)
# Option 1: OpenRouter (Recommended - $0-3/month)
AI_PROVIDER=openrouter
OPENROUTER_API_KEY=sk-or-v1-your-key-here

# Option 2: Groq (FREE - 6K requests/day)
# AI_PROVIDER=groq
# GROQ_API_KEY=gsk_your-key-here

# Option 3: Ollama (FREE - Self-hosted)
# AI_PROVIDER=ollama
# OLLAMA_HOST=http://localhost:11434

# AI Model Configuration
AI_MODEL=anthropic/claude-3.5-sonnet
AI_TEMPERATURE=0.7
AI_MAX_TOKENS=2000

# Schedule Configuration (Cron format)
# Default: Every Monday at 9 AM UTC
SCHEDULE_EXPRESSION=cron(0 9 ? * MON *)

# Cost Thresholds (for alerts)
COST_THRESHOLD_WARNING=100
COST_THRESHOLD_CRITICAL=500

# Data Retention (days)
REPORT_RETENTION_DAYS=30
METRICS_RETENTION_DAYS=90

# Feature Flags
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_SLACK_NOTIFICATIONS=false
ENABLE_S3_REPORTS=true
ENABLE_DETAILED_LOGGING=false

# DynamoDB Configuration
DYNAMODB_BILLING_MODE=PAY_PER_REQUEST

# Lambda Configuration
LAMBDA_MEMORY_SIZE=512
LAMBDA_TIMEOUT=300

# Tags (for resource organization)
TAG_PROJECT=aws-ai-cost-optimizer
TAG_OWNER=your-name
TAG_ENVIRONMENT=production
TAG_COST_CENTER=engineering